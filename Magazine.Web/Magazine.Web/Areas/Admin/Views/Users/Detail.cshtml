@using MagazineApp.Web.Areas.Admin.Models.UsersViewModels;
@model UserDetailsViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Detail</h2>

@using (Html.BeginForm("Save", "Users", FormMethod.Post, new { @class = "form-horizontal" })) {
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.UserName)
    @Html.HiddenFor(m => m.Name)
    @Html.HiddenFor(m => m.Surname)
    @Html.HiddenFor(m => m.Email)
    @Html.HiddenFor(m => m.IsBlocked)
    <div class="form-group row">
        <label class="col-md-1 control-label" style="margin-top:-5px;">Status:</label>
        <div class="col-md-1">
            @(Model.IsBlocked ? "Blocked" : "Active")
        </div>
        <div class="col-md-1">
            <div style="margin-top:-10px;">
                @if (Model.IsBlocked) {
                    <button class="btn btn-default user-unblock-btn">Unblock</button>
                }
                else {
                    <button class="btn btn-default user-block-btn">Block</button>
                }
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-1 control-label" style="margin-top:-5px;">UserName:</label>
        <div class="col-md-4">
            @Model.UserName
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-1 control-label" style="margin-top:-5px;">Name:</label>
        <div class="col-md-4">
            @Model.Name @Model.Surname
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-1 control-label" style="margin-top:-5px;">Email:</label>
        <div class="col-md-4">
            @Model.Email
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-1 control-label" style="margin-top:-5px;">Role:</label>
        <div class="col-md-4">
            @Html.DropDownListFor(m => m.Role, Model.UserTypesList, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <button type="submit" class="btn btn-default" style="margin-left:40px;">Save</button>
        <a href="@Url.Action("Index", "Users")" class="btn btn-default" style="margin-left:20px;">Back to Users list</a>
    </div>
}


